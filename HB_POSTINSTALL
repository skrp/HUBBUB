
# ONETIMEONLY ##############
zfs create zroot/nfs;
zfs create zroot/ftp;
mkdir /HIVE
mkdir /net
mkdir /pool
mkdir /g

zfs set sharenfs=on zroot/nfs;
mkdir /zroot/nfs/pub;
mkdir /zroot/nfs/dump;
chmod 0777 /zroot/nfs/pub;
chmod 0333 /zroot/nfs/dump;
chmod 0777 /zroot/ftp/pub;
chmod 0333 /zroot/ftp/dump;
echo 'console none unknown off insecure' >> /etc/ttys;
echo 'crypt_default=blf' >> /etc/auth.conf;
sed 'passwd_format="blf"'



pkg install sudo;
pkg install perl5;
pkg install vsftpd;
pkg install openntpd;
pkg install bash;
pkg install vim;
pkg install screen;
pkg install cmatrix;

cpan install LWP::UserAgent;
cpan install File::Find::Rule;
cpan install Digest::SHA;
cpan install Parallel::ForkManager;
cpan install File::LibMagic;
cpan install List::Utils;
